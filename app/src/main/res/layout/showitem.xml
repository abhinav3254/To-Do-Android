<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            
            <TextView
                android:id="@+id/categoryNameSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textColor="@color/deepPurple"
                android:fontFamily="@font/fira_code"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/messageSI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have to make this application at any cost and try to make this application complete any how"
                android:maxLines="2"
                android:textSize="20sp"
                android:textColor="@color/ultraMarine"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/fira_code"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dateSI"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:elevation="5dp"
                    app:elevation="5dp"
                    android:text="03/09/2000"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    app:cornerRadius="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fira_code_bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/timeSI"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:elevation="5dp"
                    app:elevation="5dp"
                    android:text="18:00"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fira_code_bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    app:cornerRadius="15dp"
                    android:backgroundTint="#F07DEA"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:elevation="5dp"
                    app:elevation="5dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    app:cornerRadius="15dp"
                    android:backgroundTint="@color/purple_200"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:elevation="5dp"
                    app:elevation="5dp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:layout_marginRight="10dp"
                    app:cornerRadius="15dp"
                    android:backgroundTint="@color/purple_200"
                    />
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>